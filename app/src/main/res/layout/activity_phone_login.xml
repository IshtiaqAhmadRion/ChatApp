<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17sp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:padding="8dp"
        android:hint="Write Phone number here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/phone"
        android:textStyle="bold"
        android:background="@drawable/inputs"


        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17sp"
        android:layout_marginRight="17dp"
        android:drawableLeft="@drawable/phone" />

    <LinearLayout
        android:id="@+id/verification_code_layout"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_below="@+id/phone_number_input"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="58dp"
            android:id="@+id/code_1"
            android:textAlignment="center"

            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"


            android:maxLength="1"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/otp_background"
            android:padding="2dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/code_2"
            android:maxLength="1"
            android:textAlignment="center"

            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"

            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/otp_background"
            android:padding="2dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/code_3"
            android:layout_width="58dp"
            android:textAlignment="center"

            android:maxLength="1"

            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"

            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/otp_background"
            android:padding="2dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/code_4"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:textAlignment="center"
            android:maxLength="1"



            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/otp_background"
            android:padding="2dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/code_5"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:textAlignment="center"
            android:maxLength="1"



            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/otp_background"
            android:padding="2dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/code_6"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:textAlignment="center"
            android:maxLength="1"



            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/otp_background"
            android:padding="2dp"
            android:textSize="25sp" />


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:id="@+id/send_ver_code_button"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/verification_code_layout"

        android:layout_marginStart="17sp"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="17dp"
        android:background="@drawable/buttons"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17sp"
        android:layout_marginRight="17dp" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/verify_button"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/send_ver_code_button"

        android:layout_marginStart="17sp"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="17dp"
        android:background="@drawable/buttons"
        android:layout_marginTop="1dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17sp"
        android:layout_marginRight="17dp" />

</RelativeLayout>